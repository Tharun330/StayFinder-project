<% layout("/layouts/boilerPlate") %>
    <div class="loginContainer col-8 offset-2 mt-5">

        <div class="row">
           
             <div class="col-6 offset-3">
                <h2 class="mb-3">Login</h2>
               <form method="POST" action="/login" novalidate class="needs-validation">
             

                <div>
                    <label for="username" class="form-label">Username</label>
                    <input type="text"  class="form-control"  name="username" " placeholder="Enter Username" required>
                      <div class="valid-feedback">Looks Good!</div>
                      <div class="invalid-feedback">Username Required</div>
                </div>


                <div>
                    <label for="password" class="form-label">Password</label>
                    <input type="password"  class="form-control"  name="password" " placeholder="Enter Password" required>
                </div>
                 

                    <button class="btn btn-primary mt-3 post-btn">Login</button>
                    <p class="mt-3">Don't have Account? <a href="/signup">SignUp</a></p>
                 
              
               </form>
             </div>
        </div>
    </div>
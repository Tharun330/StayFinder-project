<%layout("/layouts/boilerPlate") %>


  <div class="bookingDetails col-6 offset-3 mt-5">
    <div class="d-flex justify-content-start offset-3 mt-3">
      <label class="form-label"><b>Name:</b></label>
      <p class=" ms-5 ">
        <%=accountDetails.name%>
      </p>
    </div>

    <div class="d-flex justify-content-start offset-3">
      <label class="form-label"><b>Username:</b></label>
      <p class="ms-3">
        <%=accountDetails.username%>
      </p>
    </div>

    <div class="d-flex justify-content-start offset-3">
      <label class="form-label"><b>Email:</b></label>
      <p class="ms-5">
        <%=accountDetails.email%>
      </p>
    </div>

    <form method="get" action="/user/<%=accountDetails._id%>/edituserdetails">

      <div>
        <button class="btn">Edit Details</button>
      </div>
    </form>

  </div>
<%layout("/layouts/boilerPlate") %>

    <body>



        <div class="col-6 offset-3 mt-4">
   
            <% if(data.length == 0){ %>
 
                <h2 class="offset-3">No Results FoundðŸ˜•</h2>

            <% } %>

            <% for(castles of data){ %>

                <a href="/listings/<%=castles._id%>" class="listing-link">

                    <div class="card listing-card ">
                        <div class="card-img-overlay"></div>
                        <img src="<%=castles.image.url%>" class="card-img-top " style="height: 18rem;"
                            alt="<%=castles.image%>">
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <p>
                                        <%=castles.title%>
                                    </p>
                                </b>
                            <p>&#36 <%=castles.price.toLocaleString("en-US")%></p>
                            </p>
                        </div>
                    </div>
                </a>


       

        <% } %>

    </div>

